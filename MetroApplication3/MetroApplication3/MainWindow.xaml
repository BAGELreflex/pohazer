                    <ComboBox Grid.Column="1" Margin="5">
                        <ComboBox.Items>
                            <ComboBoxItem>Annually</ComboBoxItem>
                            <ComboBoxItem>Monthly</ComboBoxItem>
                        </ComboBox.Items>
                    </ComboBox>
                    <Label Grid.Row="1" Margin="5">Amount</Label>
                    <TextBox Grid.Row="1" Grid.Column="1" Margin="5"/>
                </Grid>
